<link rel="stylesheet" href="/css/sign_in.css">
<script src="/js/sign_in.js"></script>

<main class="my-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Sign In into Account</div>
                        <div class="card-body">
                            <form name="my-form" onsubmit="return validform()" action="/users/create-session" method="post">
	                                <div class="form-group row">
	                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
	                                    <div class="col-md-6">
	                                        <input type="text" id="email_address" class="form-control" name="email">
	                                    </div>
	                                </div> 
	                                <div class="form-group row">
	                                    <label for="user_name" class="col-md-4 col-form-label text-md-right">Password</label>
	                                    <div class="col-md-6">
	                                        <input type="password" id="password" class="form-control" name="password">
	                                    </div>
	                                </div>
                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-warning text-light">
                                        Sign In
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</main>




